<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:endColor="@color/appBlack"
                android:startColor="@color/appBlack" />
            <stroke
                android:width="5dp"
                android:color="@color/appBlack" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <gradient
                    android:endColor="@color/textTertiary"
                    android:startColor="@color/textTertiary" />
            </shape>
        </clip>
    </item>
</layer-list>